.indented
        .row
            .col-md-6
                if (gen.image)
                    .smallImage
                        img(src= gen.image.small_url)
                br
            .col-md-6
                h3 #{gen.name}
                b= "Date of Original Release: "
                = gen.original_release_date
                br
                b= "Developers: "
                if (gen.developers)
                    each dev in gen.developers
                        = dev.name + ", "
                br
                b= "Publishers: "
                if (gen.publishers)
                    each pub in gen.publishers
                        = pub.name + ", "
                br
                b= "Genres: "
                if (gen.genres)
                    each BLAH in gen.genres
                        = BLAH.name + ", "
                br
                b= "Franchises: "
                if (gen.franchises)
                    each fran in gen.franchises
                        = fran.name + ", "
        .row    
            b= "Description: "
            if (gen.deck)
                |#{gen.deck}
        .row
            .col-md-6
                h2 Twitter Results
                each item in data.statuses
                    .indented
                        .row
                            .col-md-6
                                if (item.user)
                                 b= "User Name: "
                                  = item.user.screen_name
                                br
                                b= "Created At:  "
                                = item.created_at
                                br
                                b= "Message: "
                                = item.text
                                br
            .col-md-6
                h2 Giant Bomb Game Review
                if (gen.reviews)
                    //if (gen.reviews.length > 0)
                else
                    | There are no reviews from Giant Bomb
