.indented
        .row
            .col-md-6
                if (general.image)
                    .smallImage
                        img(src= general.image.small_url)
                br
            .col-md-3
                h3 #{general.name}
                b= "Date of Original Release: "
                = general.original_release_date
                br
                b= "Developers: "
                if (general.developers)
                    each dev in general.developers
                        = dev.name + ", "
                br
                b= "Genres: "
                if (general.genres)
                    each gen in general.genres
                        = gen.name + ", "
                br
                b= "Franchises: "
                if (general.franchises)
                    each fran in general.franchises
                        = fran.name + ", "
        .row    
            b= "Description: "
            if (general.deck)
                |#{general.deck}


h2 Twitter Results
each item in twitter.statuses
    .indented
        .row
            .col-md-6
                if (item.user)
                 b= "User Name: "
                  = item.user.screen_name
                br
                b= "Created At:  "
                = item.created_at
                br
                b= "Message: "
                = item.text
                br
                b
                br
